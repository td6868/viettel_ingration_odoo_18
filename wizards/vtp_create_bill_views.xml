<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vtp_create_bill_wizard_form" model="ir.ui.view">
        <field name="name">vtp.create.bill.wizard.form</field>
        <field name="model">vtp.create.bill.wizard</field>
        <field name="arch" type="xml">
            <form string="Tạo vận đơn ViettelPost">
                <sheet>
                    <group>
                        <group>
                            <field name="picking_id"/>
                            <field name="partner_id"/>
                            <field name="company_type"/>
                            <field name="account_id" required="1"/>
                            <field name="store_id" options="{'no_create': True}" required="1" domain="[('account_id', '=', account_id)]"/>
                        </group>
                        <group>
                            <field name="service_type" required="1"/>
                            <field string="Tiền COD" name="cod_amount"/>
                            <field name="order_payment"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thông tin người nhận" name="receiver">
                            <group>
                                <group>
                                    <field name="receiver_name" required="1"/>
                                    <field name="receiver_phone" required="1"/>
                                    <field name="receiver_address" required="1"/>
                                </group>
                                <group>
                                    <field name="receiver_province_id" required="1"/>
                                    <field name="receiver_district_id" required="1" domain="[('provinceId', '=', receiver_province_id)]"/>
                                    <field name="receiver_ward_id" required="1" domain="[('districtId', '=', receiver_district_id)]"/>
                                </group>
                            </group>
                        </page>
                        <page string="Thông tin hàng hóa" name="product">
                            <group>
                                <group>
                                    <field name="product_name"/>
                                    <field name="product_price"/>
                                    <field name="product_weight" required="1"/>
                                </group>
                                <group>
                                    <field name="product_length"/>
                                    <field name="product_width"/>
                                    <field name="product_height"/>
                                </group>
                            </group>
                            <group>
                                <field name="note" placeholder="Ghi chú vận đơn"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_create_bill" string="Tạo vận đơn" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_vtp_create_bill_wizard" model="ir.actions.act_window">
        <field name="name">Tạo vận đơn ViettelPost</field>
        <field name="res_model">vtp.create.bill.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">form</field>
    </record>

    <!-- Tra cước ViettelPost trên Sale Order -->
    <record id="view_vtp_check_fee_wizard_form" model="ir.ui.view">
        <field name="name">vtp.check.fee.wizard.form</field>
        <field name="model">vtp.check.fee.wizard</field>
        <field name="arch" type="xml">
            <form string="Tra cước ViettelPost">
                <sheet>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="partner_id"/>
                            <field name="account_id" required="1"/>
                            <field name="store_id" options="{'no_create': True}" required="1" domain="[('account_id', '=', account_id)]"/>
                        </group>
                        <group>
                            <field name="service_type" required="1"/>
                            <field name="cod_amount" string="Tiền COD"/>
                            <field name="order_payment"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thông tin người nhận" name="receiver">
                            <group>
                                <group>
                                    <field name="receiver_name" required="1"/>
                                    <field name="receiver_phone" required="1"/>
                                    <field name="receiver_address" required="1"/>
                                </group>
                                <group>
                                    <field name="receiver_province_id" required="1"/>
                                    <field name="receiver_district_id" required="1" domain="[('provinceId', '=', receiver_province_id)]"/>
                                    <field name="receiver_ward_id" domain="[('districtId', '=', receiver_district_id)]"/>
                                </group>
                            </group>
                        </page>
                        <page string="Thông tin hàng hóa" name="product">
                            <group>
                                <group>
                                    <field name="product_name"/>
                                    <field name="product_price"/>
                                    <field name="product_weight"/>
                                </group>
                                <group>
                                    <field name="product_length"/>
                                    <field name="product_width"/>
                                    <field name="product_height"/>
                                </group>
                            </group>
                        </page>
                        <page string="Phí vận chuyển" name="fee">
                            <group>
                                <group>
                                    <field name="money_total_old" widget="monetary"/>
                                    <field name="money_total" widget="monetary"/>
                                    <field name="money_total_fee" widget="monetary"/>
                                    <field name="money_fee" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="money_collection_fee" widget="monetary"/>
                                    <field name="money_other_fee" widget="monetary"/>
                                    <field name="money_vas" widget="monetary"/>
                                    <field name="money_vat" widget="monetary"/>
                                    <field name="kpi_ht" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_calculate_fee" string="Tính phí vận chuyển" type="object" class="btn-primary"/>
                    <button string="Đóng" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vtp_check_fee_wizard" model="ir.actions.act_window">
        <field name="name">Tra cước ViettelPost</field>
        <field name="res_model">vtp.check.fee.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>