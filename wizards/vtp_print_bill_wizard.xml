<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_vtp_print_bill_wizard_form" model="ir.ui.view">  
        <field name="name">vtp.print.bill.wizard.form</field>
        <field name="model">vtp.print.bill.wizard</field>
        <field name="arch" type="xml">
            <form string="In Phiếu ViettelPost">
                <sheet>
                    <group>
                        <group>
                            <field name="picking_id"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="order_number"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_print_bill" string="In Phiếu ViettelPost" type="object" class="btn-primary"/>
                    <button string="Đóng" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_vtp_print_bill" model="ir.actions.act_window">
        <field name="name">In Phiếu ViettelPost</field>
        <field name="res_model">vtp.print.bill.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
