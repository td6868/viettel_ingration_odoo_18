<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_update_bill_wizard_form" model="ir.ui.view">
        <field name="name">vtp.update.bill.status.wizard.from</field>
        <field name="model">vtp.update.bill.status.wizard</field>
        <field name="arch" type="xml">
            <form string="Cập nhật đơn ViettelPost">
                <sheet>
                    <group>
                        <field name="picking_id"/>
                        <field name="order_number"/>
                        <field name="type"/>
                        <field name="note"/>
                    </group>
                    <group>
                        <field name="vtp_state" string="Trạng thái" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_update_bill_status" string="Cập nhật" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_vtp_update_bill_status_wizard" model="ir.actions.act_window">
        <field name="name">Cập nhật đơn ViettelPost</field>
        <field name="res_model">vtp.update.bill.status.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>