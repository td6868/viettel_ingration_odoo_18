<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Store Form View -->
    <record id="vtp_store_view_form" model="ir.ui.view">
        <field name="name">vtp.store.view.form</field>
        <field name="model">vtp.store</field>
        <field name="arch" type="xml">
            <form string="Store ViettelPost">
                <header>
                    <button name="action_set_default" string="Đặt làm mặc định" type="object" class="btn-primary" 
                        invisible="is_default" 
                        groups="viettel_ingration_odoo_18.group_viettel_post_admin"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="account_id" placeholder="Tài khoản"/>
                            <field name="name" placeholder="Tên Store"/>
                        </h1>
                        <div class="oe_inline">
                            <field name="is_default" readonly="1"/>
                            <label for="is_default" string="Store mặc định"/>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="store_id"/>
                            <field name="phone"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="provinceId"/>
                            <field name="districtId" domain="[('provinceId', '=', provinceId)]"/>
                            <field name="wardId" domain="[('districtId', '=', districtId)]"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="province_code"/>
                            <field name="district_value"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Store list View -->
    <record id="vtp_store_view_list" model="ir.ui.view">
        <field name="name">vtp.store.view.list</field>
        <field name="model">vtp.store</field>
        <field name="arch" type="xml">
            <list string="Store ViettelPost">
                <field name="account_id"/>
                <field name="name"/>
                <field name="store_id"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="provinceId"/>
                <field name="districtId"/>
                <field name="is_default"/>
            </list>
        </field>
    </record>

    <!-- Store Search View -->
    <record id="vtp_store_view_search" model="ir.ui.view">
        <field name="name">vtp.store.view.search</field>
        <field name="model">vtp.store</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm Store">
                <field name="account_id"/>
                <field name="name"/>
                <field name="store_id"/>
                <field name="provinceId"/>
                <field name="districtId"/>
                <filter string="Store mặc định" name="default" domain="[('is_default', '=', True)]"/>
                <filter string="Hoạt động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Không hoạt động" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Tỉnh/Thành phố" name="group_by_province" context="{'group_by': 'provinceId'}"/>
                    <filter string="Quận/Huyện" name="group_by_district" context="{'group_by': 'districtId'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Store Action -->
    <record id="action_vtp_store" model="ir.actions.act_window">
        <field name="name">Store ViettelPost</field>
        <field name="res_model">vtp.store</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="vtp_store_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Chưa có Store ViettelPost nào.
            </p>
            <p>
                Bạn có thể đồng bộ Store từ ViettelPost hoặc tạo mới Store.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_viettelpost_root" 
        name="ViettelPost" 
        web_icon="viettel_ingration_odoo_18,static/description/vtp.png"
        groups="viettel_ingration_odoo_18.group_viettel_post_user"
        sequence="100"/>
    <menuitem id="menu_vtp_store" name="Store ViettelPost" parent="menu_viettelpost_root" action="action_vtp_store" groups="viettel_ingration_odoo_18.group_viettel_post_user" sequence="10"/>
</odoo>